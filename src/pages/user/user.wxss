.userinfo{
  position: relative;
  width: 750rpx;
  height: 320rpx;
  background: #008842;
  color: #fff;
  display: flex;
  align-items: center;
}
.userinfo-avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border:2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0,0,0,0.2);
  overflow:hidden;
}

.userinfo-nickname {
  color: #fff;
  font-size: 14px;
}

