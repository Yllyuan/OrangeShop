/**用户信息样式**/
.info-container{
  background-color:#EFEFF4;
  height: 100%;
  margin-top: 20rpx;
}
.page-body-setting {
  margin-top: 12rpx;
  height: 100%;
}
 
.page-body-setting-item {
  /* height: 90rpx; */
  background-color: #fff;
  font-size: 28rpx;  
   border-bottom-width: 90%;
  border-bottom: 1px solid #EFEFF4;
 
}
.own-info-item{
  width: 100%;
  display: flex;
  justify-content: space-around;
  line-height: 90rpx;
}
.info-name{
  width: 35%;
  font-size: 28rpx;
  color: #333;
  text-align: left;
  margin-left: 20rpx;
  line-height: 90rpx;
}
.info-text{
  width: 60%;
    text-align: left;
    margin-right: 30rpx;
  font-size: 28rpx;
  color:#333;


}

.info-text-input-tips{
  color:#555;
  margin: 10rpx 30rpx 10rpx 35%;
  font-size: 25rpx;
  text-align: left; 
  padding-left:20rpx;
}

.info-text picker{
  height: 60rpx;
line-height: 60rpx;
padding-left:30rpx;
border: 1px solid #E8E8E8;
}

.info-text textarea{
  width:90%;
  border: 1px solid #E8E8E8;
  padding:10rpx 30rpx; 
  margin:20rpx 0; 
  padding-right:30rpx;
  height: 200rpx;
  line-height: 40rpx;

}

.input-text{
  margin-top: 15rpx;
  border: 1px solid #E8E8E8;
  border-radius: 5rpx;
  height: 60rpx;
  padding-left: 30rpx;
}


.img_box{

  text-align: left;
  padding-right: 20rpx;
  background: #fff;
  padding-left: 35%;


}
.button{
  margin-top: 20rpx;
 background-color:#00BFFF;
 color: #FFF;
 width: 96%;
