  background-color: green;
}
.info-file-wenzi{
  border: 1px solid #E8E8E8;
  padding: 10rpx 20rpx;
}

.checkbox_item{
  display: block;
}

.checkbox_item checkbox{
  margin-left: 35%;
  margin-bottom: 12px;
  padding-left: 20rpx;
}

